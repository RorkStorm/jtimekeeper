
<service>
  <id>winsessionservice</id>
  <name>Windows SessionChange Java Service</name>
  <description>Java service that logs Windows SessionChanged events (logon/logoff/lock/unlock).</description>

  <executable>java</executable>
  <arguments>-jar windows-sessionchange-service-1.0.0.jar</arguments>

  <!-- Logs (WinSW crÃ©e des .log dans le dossier) -->
  <logpath>.</logpath>
  <log mode="roll-by-time"/>

  <!-- Recovery: restart sur crash -->
  <onfailure action="restart" delay="10 sec"/>
</service>
